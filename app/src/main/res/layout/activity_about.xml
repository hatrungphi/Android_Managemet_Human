<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3E97D3"
        android:gravity="center"
        android:text="@string/title_qlns"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/ma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên:            "
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintTop_toTopOf="@id/header"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:id="@+id/maNV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hà Trung Phi"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ma"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:id="@+id/lop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lớp: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ma"
        app:layout_constraintTop_toBottomOf="@id/ma"

        />
    <TextView
        android:id="@+id/Lop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D19_TH01"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ten"
        app:layout_constraintTop_toBottomOf="@id/maNV"
        android:layout_marginStart="5dp"

        />
    <TextView
        android:id="@+id/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã sinh viên: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/lop"
        app:layout_constraintTop_toBottomOf="@id/lop"


        />
    <TextView
        android:id="@+id/tenNV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DH51905519"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ten"
        app:layout_constraintTop_toBottomOf="@id/Lop"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/tenPhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:         "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ten"
        app:layout_constraintTop_toBottomOf="@id/ten"
        />
    <TextView
        android:id="@+id/tenPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dh51905519@student.stu.edu.vn"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/tenNV"
        app:layout_constraintStart_toEndOf="@id/tenPhong"

        />

    />
    <TextView
        android:id="@+id/sdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: "
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/tenPhong"
        app:layout_constraintTop_toBottomOf="@id/tenPhong"
        />
    <TextView
        android:id="@+id/tvsdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0857435466"
        android:textSize="20sp"
        android:textColor="#6964FD"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/tenPhong"
        app:layout_constraintStart_toEndOf="@id/sdt"

        />

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0pt"
        android:layout_height="0pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvsdt" />


</androidx.constraintlayout.widget.ConstraintLayout>